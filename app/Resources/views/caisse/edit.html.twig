{% extends 'base.html.twig' %}

{% block body %}
    <h1>Caisse edit</h1>

    {{ form_start(edit_form) }}
    <div class="form-group">
        {{ form_label(edit_form.type) }}
        {{ form_widget(edit_form.type, {'type': {},'attr': {'class': 'form-control'}} ) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.amount) }}
        {{ form_widget(edit_form.amount, {'attr': {'class': 'form-control'}} ) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.date) }}
        {{ form_widget(edit_form.date, {'attr': {'class': 'form-control'}} ) }}
    </div>
        <a href="{{ path('caisse_index') }}" class="btn btn-dark" role="button">Back</a>
        <input type="submit" value="Edit" class="btn btn-warning" />
    {{ form_end(edit_form) }}
    <br>
    {{ form_start(delete_form) }}
        <input type="submit" value="Delete" class="btn btn-danger">
    {{ form_end(delete_form) }}
{% endblock %}
