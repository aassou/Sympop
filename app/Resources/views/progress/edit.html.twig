{% extends 'base.html.twig' %}

{% block body %}
    <h1>Progress edit</h1>

    {{ form_start(edit_form) }}
        <div class="form-group">
            {{ form_label(edit_form.name) }}
            {{ form_widget(edit_form.name, {'attr': {'class': 'form-control'}} ) }}
        </div>
        <div class="form-group">
            {{ form_label(edit_form.description) }}
            {{ form_widget(edit_form.description, {'attr': {'class': 'form-control'}} ) }}
        </div>
        <div class="form-group">
            {{ form_label(edit_form.tags) }}
            {{ form_widget(edit_form.tags, {'attr': {'class': 'form-control'}} ) }}
        </div>
        <div class="form-group">
            {{ form_label(edit_form.date) }}
            {{ form_widget(edit_form.date, {'attr': {'class': 'form-control'}} ) }}
        </div>
        <a href="{{ path('progress_index') }}" class="btn btn-dark">Back</a>
        <input type="submit" value="Edit" class="btn btn-warning" />
    {{ form_end(edit_form) }}
{% endblock %}
